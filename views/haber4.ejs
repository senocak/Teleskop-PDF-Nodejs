<!doctype html>
<html lang="tr">
    <head>
        <%- include('partials/header') -%>
    </head>
    <body>
        <header>
            <div class="container">
                <h1><%=currentRes.stream.name.toLocaleUpperCase()%> AKIŞ RAPORU</h1>
                <div class="middle">
                    <span><%=start_date%> - <%=end_date%></span>
                    <hr/>
                </div>
                <div class="brand">
                    <div class="logo">
                        <img src="/logo.png" alt="">
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div class="container" style="padding: inherit !important;">
                <h3>Popüler Haberler</h3>
                <div class="grid-container">
                    <% for(var i=0; i < popularNewsRes.documents.length; i++) { %>
                        <div class="item1" style="box-shadow: 1px 1px 3px 0px rgba(0,0,0,0.75);border: none !important;padding: 20px !important;">
                            <img src="<%= popularNewsRes.documents[i].source.favicon %>" style="width: 8%;float: left;border-radius: 50%;" onerror="this.src='/haber.svg'">
                            <div style="text-align: left;font-size: 10px;margin-left: 50px;">
                                <b><%= popularNewsRes.documents[i].title %></b>
                                <br>
                                <%= popularNewsRes.documents[i].content.substring(0, 200) %>
                                <br><br>
                                <section>
                                    <div style="width: 20%;float: left;"><a href="<%= popularNewsRes.documents[i].original_url %>" target="_blank"><%= popularNewsRes.documents[i].source.domain %></a></div>
                                    <div style="float: right;"><%= moment(popularNewsRes.documents[i].created_at).format('DD.MM.YYYY HH:mm:ss') %></div>
                                </section>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
        <%- include('partials/footer') -%>
    </body>
</html>