<!doctype html>
<html lang="tr">
    <head>
        <%- include('partials/header') -%>
    </head>
    <body>
        <header>
            <div class="container">
                <h1>GENEL ÖZET AKIŞ RAPORU</h1>
                <div class="middle">
                    <span><%=start_date%> - <%=end_date%></span>
                    <hr/>
                </div>
                <div class="brand">
                    <div class="logo">
                        <img src="/logo.png" alt="">
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div class="container">
                <h1>GENEL ÖZET</h1>
                <div class="text">
                    <p style="text-align: justify !important;">
                        <b><%=start_date%></b> – <b><%=end_date%></b> tarihleri arasında <b><%=currentRes.stream.name%></b> adlı akışınızda toplam <b><%=currentResToplam%></b> içerik bulunmuştur.
                        İçeriklerin toplamında bir önceki haftaya göre <%=oran%> mevcuttur.
                        Akışınızla ilgili detaylı grafikler aşağıda yer almaktadır.
                    </p>
                </div>
                <h3>Zamana Göre Toplam Gönderi Sayıları</h3>
                <div id="timeLineChart" class="chart"></div>

                <h3>Kategori Bazlı Dağılım</h3>
                <div id="dailyChart" class="chart"></div>
            </div>
        </main>
        <script>
            let optionsTimeLineChart = {
                chart: {
                    type: 'line',
                    height: 420,
                    width: 800,
                    toolbar: {show: false},
                    dataLabels: {enabled: true,},
                },
                series: [{
                    name: 'Seçilen aralık',
                    data: [<% for(var i=0; i < currentRes.stats.length; i++) { %> <%= currentRes.stats[i].doc_count %>,<% } %>]
                }, {
                    name: 'Önceki aralık',
                    data: [<% for(var i=0; i < lastWeekRes.stats.length; i++) { %> <%= lastWeekRes.stats[i].doc_count %>,<% } %>]
                }],
                xaxis: {
                    categories: [<% for(var i=0; i < currentRes.stats.length; i++) { %> '<%= currentRes.stats[i].key_as_string.split("T")[0] %>',<% } %>]
                },
                colors: colors,
                markers: {
                    size: 5
                },
            }
            let chartTimeLineChart = new ApexCharts(document.querySelector('#timeLineChart'), optionsTimeLineChart)
            chartTimeLineChart.render()
            //Second Chart
            let optionsDaily = {
                chart: {
                    height: 420,
                    width: 800,
                    type: 'bar',
                    toolbar: {
                        show: false
                    },
                    dataLabels: {
                        enabled: true,
                    },
                    parentHeightOffset: -5
                },
                plotOptions: {
                    bar: {
                        horizontal: false,
                        distributed: false,
                        endingShape: 'flat',
                        columnWidth: '70%',
                        dataLabels: {
                            position: 'top',
                        },
                        distributed: true
                    },
                },
                dataLabels: {
                    enabled: true,
                    offsetY: -20,
                    formatter: function (val) {
                        return val + " adet";
                    },
                    style: {
                        fontSize: '12px',
                        colors: ['#444444']
                    },
                },
                series: [{
                            name: 'Kategoriler',
                            data: [
                                <%=kategoriChartRes.stats.news %>,
                                <%=kategoriChartRes.stats.twitter %>,
                                <%=kategoriChartRes.stats.news %>,
                                <%=kategoriChartRes.stats.video %>,
                                <%=kategoriChartRes.stats.forumblog %>,
                                <%=kategoriChartRes.stats.web %>
                            ]
                        }
                    ],
                xaxis: {
                    categories: ['Haber', 'Twitter', 'İnstagram', 'Video', 'Forum/Blog', 'Web'],
                },
                colors: ['#003f5c', '#444e86', '#955196','#dd5182','#ff6e54','#ffa600'],
            }
            let chartDaily = new ApexCharts(document.querySelector('#dailyChart'), optionsDaily);
            chartDaily.render();
        </script>
    </body>
</html>